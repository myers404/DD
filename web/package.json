{
  "name": "cpq-configurator-ui",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:widget": "vite build --config vite.widget.config.js",
    "build:embed": "vite build --config vite.embed.config.js",
    "build:all": "npm run build && npm run build:widget && npm run build:embed",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./jsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.svelte",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "deploy": "npm run build:all && node scripts/deploy.js"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^5.1.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.27.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@sveltejs/kit": "^2.21.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
