{
  "name": "@yourcompany/cpq-embedded-configurator",
  "version": "1.0.0",
  "description": "Embedded CPQ Configurator built with Svelte 5",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "build:widget": "vite build --config vite.widget.config.js",
    "build:embed": "vite build --config vite.embed.config.js",
    "build:all": "npm run build && npm run build:widget && npm run build:embed",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext js,svelte",
    "deploy": "node scripts/deploy.js"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^0.0.17",
    "@sveltejs/kit": "^2.21.5",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "svelte": "^5.0.0",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/svelte": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
